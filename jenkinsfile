pipeline {
  agent any
  environment {
    NEW_VERSION = '1.0'
  }
  stages {

    stage('Initialize')  {
      steps {
        echo 'Initialize Steps'
        sh 'mvn -version'
      }
    }
    stage('Build') {
      steps {
        echo 'maven build'
        sh 'mvn -B -DskipTests clean package'
        echo "Building version: ${NEW_VERSION}"
      }
    }

    stage('Maven_Test') { 
          when {
            expression {
              BRANCH_NAME == 'Development'
            }
          }

      steps {
        sh 'mvn test'
      }
    } 
    stage('Mega-Linter') {
      agent {
        docker {
            image 'nvuillam/mega-linter:v4'
            args "-e VALIDATE_ALL_CODEBASE=true -v ${WORKSPACE}:/tmp/lint --entrypoint=''"
            reuseNode true
          }
        }
        steps {
        sh '/entrypoint.sh'
        }
    }
    
    stage('Deploy') {

      parallel {
        stage('Deploy_Development') {
          when {
            branch 'Development'
          }
          
          steps {
            echo 'Deploying in DEV with test'
          }
        }

        stage('Deploy_Staging') {
          when {
            branch 'Staging'
          }          
          steps {
            echo 'Deploying in Staging'
          }
        }

        stage('Deploy_Production') {
          when {
            branch 'main'
          }
          steps {
            echo 'Deploying in Production'
          }
        }

      }
    }

    stage('Test') { ///  TEST WILL ONLY EXCUTE IF THE CURRENT BRANCH IS DEVELOMMENT
      steps {
       echo 'All tests were ok'
      }
    }

    stage('Archive') {
      steps {
        archiveArtifacts(allowEmptyArchive: true, artifacts: 'target/*.jar')
      }
    }
  }
}